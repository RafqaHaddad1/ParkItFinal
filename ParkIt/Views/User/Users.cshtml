    function populateModal(user) {
        $('#Employee_ID').val(user._id);
        $('input[name="Name"]').val(user.firstname + ' ' + user.lastname);
        $('input[name="PhoneNumber"]').val(user.mobile);
        $('input[name="Address"]').val(user.address);
        $('input[name="CreatedDate"]').val(new Date(user.createdAt).toLocaleString());
        $('#active-checkbox').prop('checked', user.isActive);
        $('input[name="Title"][value="' + user.title + '"]').prop('checked', true);
        $('input[name="EmploymentType"][value="' + user.employmentType + '"]').prop('checked', true);
    }




    $(document).ready(function () {
        // Replace this with your actual token
        var accessToken = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..EPyYB2nhbJbaVf_PKLE40YmKic1jwiwL2APvr424Raw';

        $.ajax({
            url: "https://api.parkit.nova4lb.com/admin/employees",
            type: 'GET',
            headers: {
                'Authorization': 'Bearer ' + accessToken
            },
            statusCode: {
                200: function (response) {
                    console.log(response); // Log the full response for debugging

                    // Clear previous table data
                    var tableBody = $('#User-table tbody');
                    tableBody.empty();

                    // Process each employee item
                    $.each(response, function (index, item) {
                        if (item) {
                            var row = `
                            <tr>
                                <td data-employee-id="${item._id}">
                                    <img src="../Images/UserIcon.png" style="width: 35px; height: 35px; background-color: transparent; display: block;" alt="Icon" />
                                </td>
                                <td>${item._id || 'N/A'}</td>
                                <td>${item.firstname ? item.firstname + ' ' + (item.lastname || '') : 'N/A'}</td> <!-- Display firstname and lastname -->
                                <td>${item.title || 'N/A'}</td>
                                <td>${item.employmentType || 'N/A'}</td>
                                <td>${item.isActive === true ? 'On' : item.isActive === false ? 'Off' : 'N/A'}</td>
                                <td>${item.status || 'N/A'}</td>
                                <td>${item.createdAt ? new Date(item.lastOnline).toLocaleString() : 'N/A'}</td>
                                <td>
                                    <a onclick="fetchUserDetails('${item._id}');" class="btn btn-primary" style="background-color: #23282B; border-color:#23282B; color:#F3BC12">
                                        <i class="bi bi-info-circle" style="font-size: 15px; font-weight: bold"></i>
                                    </a>
                                    <a onclick="EditUser('${item._id}')" class="btn btn-primary" style="background-color: #F3BC12; border-color:#F3BC12; color:#23282B">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button class="btn btn-danger" onclick="deleteUser(this, ${item._id})" style="background-color: #23282B; border-color:#23282B; color:#F3BC12">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>`;
                            tableBody.append(row); // Add new row to table
                        }
                    });

                    // Initialize DataTable after populating the table body
                    $('#User-table').DataTable();
                },
                400: function () {
                    alert("Bad request. Please try again.");
                },
                401: function () {
                    alert("Unauthorized. Please check your access token.");
                },
                500: function () {
                    alert("Server error. Please try again later.");
                }
            },
            error: function (xhr, status, error) {
                console.error("Error: " + error); // Log any errors
            }
        });
    });

