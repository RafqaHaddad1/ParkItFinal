    function EditUser(id) {
        if (confirm('Are you sure you want to edit this user?')) {
            // Redirect directly to the EditUser page with the provided employee ID
            window.location.href = "/User/EditUser/" + id;
        }
    }








    function fetchUserDetails(userId) {
        var accessToken = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..EPyYB2nhbJbaVf_PKLE40YmKic1jwiwL2APvr424Raw';

        $.ajax({
            url: "https://api.parkit.nova4lb.com/admin/employees/" + userId,
