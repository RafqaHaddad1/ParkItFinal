

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.6/css/dataTables.dataTables.css" />
    <script src="https://cdn.datatables.net/2.1.6/js/dataTables.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css">
    <title>@ViewData["Title"]</title>
    <style>

        tbody, td, tfoot, th, thead, tr {
            border-color: inherit !important;
            border-width: 0 !important;
        }

        .modal .form-container {
            display: flex;
            justify-content: space-between;
            width: 100%;
            background-color: #e0e0e0;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }


        .modal .form-left,
        .modal .form-right {
            display: flex;
            flex-direction: column;
            width: 48%;
        }

            .modal .form-left input,
            .modal .form-left select,
            .modal .form-right input {
                margin-bottom: 10px;
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }


        .modal .save-button {
            align-self: flex-end;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #F3BC12;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container">

        <h1 class="Title">Transactions Table</h1>
        <p class="text-right">
            <a onclick="location.href='@Url.Action("AddTransaction", "Transaction")'" class="btn btn-primary">Create New Transaction</a>
        </p>
        <div class="container-fluid">
            <div class="text-right mb-3">
                <button id="toggleFiltersButton" class="btn btn-secondary" type="button" data-toggle="collapse" data-target="#filterSection" aria-expanded="false" aria-controls="filterSection">
                    Show Filters
                </button>
            </div>

            <!-- Filters Section -->
            <div class="collapse" id="filterSection">
                <div class="row mb-3">
                    <div class="col">
                        <select id="TypeFilter" class="form-control">
                            <option value="All">All Types</option>
                            <option value="VIP">VIP</option>
                            <option value="Normal">Normal</option>
                        </select>
                    </div>
                    <div class="col">
                        <select id="StatusFilter" class="form-control">
                            <option value="All">All Statuses</option>
                            <option value="Parked">Parked</option>
                            <option value="Dispatched">Dispatched</option>
                        </select>
                    </div>
                    <div class="col">
                        <input type="date" id="StartDateFilter" class="form-control" placeholder="Start Date" />
                    </div>
                    <div class="col">
                        <input type="date" id="EndDateFilter" class="form-control" placeholder="End Date" />
                    </div>
                    <div class="col">
                        <button id="FilterButton" class="btn btn-primary">Apply Filters</button>
                    </div>
                </div>
            </div>
        </div>
        <table id="Transaction-Table" class="table table-hover table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th></th>
                    <th>CAR_ID</th>
                    <th>RUNNER_NAME</th>
                    <th>ZONE</th>
                    <th>TYPE</th>
                    <th>STATUS</th>
                    <th>LOT</th>
                    <th>CAR_MODEL</th>
                    <th>TIME_ARRIVED</th>
                    <th>FEE</th>
                  
                </tr>
            </thead>
            <tbody>
              
            </tbody>
        </table>
      
    </div>

    <div class="modal fade" id="editEventModal" tabindex="-1" aria-labelledby="editEventModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="editEventModalLabel">Transaction Info</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="closeEditModal" onclick=" $('#editEventModal').modal('hide');">
                      
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-container">
                        <div class="form-left">
                            <label for="Trnasaction_ID">Transaction ID</label>
                            <input type="number" name="Transaction_ID" placeholder="Transaction ID" id="Transaction_ID" readonly />
                            <label for="CarModel">Car Model</label>
                            <input type="text" name="CarModel" placeholder="Car Model" maxlength="100" id="CarModel" readonly />
                            <label for="PhoneNumber">Phone Number</label>
                            <input type="text" name="PhoneNumber" placeholder="Customer Number" maxlength="15"  id="PhoneNumber" readonly />
                            <label for="ArrivalTime">Arrival Time</label>
                            <input type="datetime-local" name="ArrivalTime" placeholder="Arrival Time" id="ArrivalTime" readonly />
                            <label for="DispatchTime">Dispatch Time</label>
                            <input type="datetime-local" name="DispatchTime" placeholder="Dispatch Time" id="DispatchTime" readonly />
                            <label for="Runner_Collect_ID">Runner Collect Name</label>
                            <input type="text" name="Runner_Collect_ID" id="Runner_Collect_ID"  placeholder="Runner on Collect" maxlength="50" readonly />
                            <label for="Runner_Dispatch_ID">Runner Dispatch Name</label>
                            <input type="text" name="Runner_Dispatch_ID" id="Runner_Dispatch_ID" placeholder="Runner on Dispatch" maxlength="50" readonly />
                            <label for="Zone_ID">Zone Name</label>
                            <input type="text" name="Zone_ID" placeholder="Zone ID" id="Zone_ID" readonly />
                            <label for="ParkingSpot_ID">Parking Spot</label>
                            <input type="number" name="ParkingSpot_ID" placeholder="Parking Spot ID" id="ParkingSpot_ID" readonly />
                        </div>
                        <div class="form-right">
                            <div class="form-group radio-group">
                                <label>Guest Type:</label>
                                <div>
                                    <input type="radio" id="VIP" name="Type" value="VIP" disabled>
                                    <label for="VIP">VIP</label>
                                </div>
                                <div>
                                    <input type="radio" id="Normal" name="Type" value="Normal" disabled>
                                    <label for="Normal">Normal</label>
                                </div>
                            </div>
                            <label for="TicketNumber">Ticket Number</label>
                            <input type="number" name="TicketNumber" id="TicketNumber" placeholder="Car Ticket Number" maxlength="50" readonly />
                            <label for="Fee">Fee</label>
                            <input type="number" name="Fee" placeholder="Fee" id="Fee" readonly />
                            <div class="form-group radio-group">
                                <label>Status:</label>
                                <div>
                                    <input type="radio" id="Parked" name="Status" value="Parked" disabled>
                                    <label for="Parked">Parked</label>
                                </div>
                                <div>
                                    <input type="radio" id="Dispatched" name="Status" value="Dispatched" disabled>
                                    <label for="Dispatched">Dispatched</label>
                                </div>
                            </div>
                            <label for="Note">Notes</label>
                            <input type="text" name="Note" placeholder="Additional Notes" maxlength="1000" id="Note" readonly/>
                           <label>Customer Rating</label>
                          <input type="text" name="Rating" id="rating_val" value="0" readonly/>
                               
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    
</body>
</html>



<script>
    // Run this part on page load to fetch all data initially
    $(document).ready(function () {
        fetchTransactions(); // Fetch and populate the table with all data initially
    });

    function fetchTransactions() {
        $.ajax({
            url: '/Transaction/TransactionTable', // Fetch all transactions initially
            type: 'GET',
            success: function (response) {
                if (response.success) {
                    console.log('transaction Table:', response.tableinfo);
                    var tableBody = $('#Transaction-Table tbody');
                    tableBody.empty();

                    $.each(response.tableinfo, function (index, item) {
                        console.log(item);
                        var row = `
                                <tr>
                                    <td data-transaction-id="${item.transactioninfo.transaction_ID}">
                                        <img src="../Images/UserIcon.png" style="width: 35px; height: 35px; background-color: transparent; display: block;" alt="Icon" />
                                    </td>
                                    <td>${item.transactioninfo.transaction_ID}</td>
                                    <td>${item.runnerName}</td>
                                    <td>${item.zoneName}</td>
                                    <td>${item.transactioninfo.type}</td>
                                    <td>${item.transactioninfo.status}</td>
                                    <td>${item.transactioninfo.parkingSpot_ID}</td>
                                    <td>${item.transactioninfo.carModel}</td>
                                    <td>${item.transactioninfo.arrivalTime}</td>
                                    <td>${item.transactioninfo.fee}</td>
                                </tr>`;
                        tableBody.append(row);
                    });

                    // Initialize the DataTable only once here
                    $('#Transaction-Table').DataTable({
                        paging: true,
                        lengthChange: true,
                        searching: false,
                        destroy: true, // Ensure table is not reinitialized every time
                        pageLength: 10, // Set default page length (pagination)
                        columns: [
                            { data: null, render: function (data) { return `<img src="../Images/UserIcon.png" style="width: 35px; height: 35px;" alt="Icon" />`; } },
                            { data: 'transactioninfo.transaction_ID' },
                            { data: 'runnerName' },
                            { data: 'zoneName' },
                            { data: 'transactioninfo.type' },
                            { data: 'transactioninfo.status' },
                            { data: 'transactioninfo.parkingSpot_ID' },
                            { data: 'transactioninfo.carModel' },
                            { data: 'transactioninfo.arrivalTime' },
                            { data: 'transactioninfo.fee' }
                        ]
                    });
                } else {
                    alert("Failed to fetch transaction data.");
                }
            },
            error: function (xhr, status, error) {
                console.error("Error: " + error);
            }
        });
    }

    // Modal handling for viewing/editing transactions
    $(document).on('click', 'td[data-transaction-id]', function () {
        var transactionId = $(this).data('transaction-id');
        fetchTransactionDetails(transactionId);
        $('#editEventModal').modal('show');
    });

    function fetchTransactionDetails(transactionId) {
        $.ajax({
            url: '/Transaction/GetTransactionDetails',
            type: 'GET',
            data: { id: transactionId },
            success: function (result) {
                console.log('Fetch result:', result);
                if (result.success && result.data) {
                    var data = result.data;
                    $('#Transaction_ID').val(data.transaction_ID || '');
                    $('input[name="CarModel"]').val(data.carModel || '');
                    $('input[name="PhoneNumber"]').val(data.phone || '');
                    $('input[name="ArrivalTime"]').val(data.arrivalTime || '');
                    $('input[name="DispatchTime"]').val(data.dispatchTime || '');
                    $('input[name="Runner_Collect_ID"]').val(data.runnerCollect || '');
                    $('input[name="Runner_Dispatch_ID"]').val(data.runnerDispatch || '');
                    $('input[name="ParkingSpot_ID"]').val(data.parking || '');
                    $('input[name="TicketNumber"]').val(data.ticketNumber || '');
                    $('input[name="Fee"]').val(data.fee || '');
                    $('input[name="Note"]').val(data.note || '');
                    $('input[name="Zone_ID"]').val(data.zone_Name || '');
                    $('input[name="Rating"]').val(data.rating || '');
                    $('input[name="Type"][value="' + (data.type || '') + '"]').prop('checked', true);
                    $('input[name="Status"][value="' + (data.status || '') + '"]').prop('checked', true);
                    $('#editEventModal').modal('show');
                } else {
                    alert('Error fetching transaction details');
                }
            },
            error: function (err) {
                console.error(err);
                alert('Error fetching transaction details');
            }
        });
    }

    $('#toggleFiltersButton').click(function () {
        var $filterSection = $('#filterSection');
        var $button = $(this);

        if ($filterSection.is(':visible')) {
            // Hide the filter section
            $filterSection.hide();
            // Update button text to indicate that the filter is hidden
            $button.text('Show Filters');
        } else {
            // Show the filter section
            $filterSection.show();
            // Update button text to indicate that the filter is visible
            $button.text('Hide Filters');
        }
    });
</script>

<script>
    // This second script is waiting for the "FilterButton" to be clicked to apply filters
    $('#FilterButton').click(function () {
        fetchFilteredTransactions();
    });

    function fetchFilteredTransactions() {
        var type = $('#TypeFilter').val();
        var status = $('#StatusFilter').val();
        var startDate = $('#StartDateFilter').val();
        var endDate = $('#EndDateFilter').val();

        $.ajax({
            url: '/Transaction/GetFilteredTransactions', // Adjust this URL as necessary
            type: 'GET',
            data: {
                type: type,
                status: status,
                startDate: startDate ? new Date(startDate).toISOString() : null,
                endDate: endDate ? new Date(endDate).toISOString() : null,
            },
            success: function (response) {
                var transactionTable = $('#Transaction-Table').DataTable();
                transactionTable.clear(); // Clear the existing table data
                transactionTable.rows.add(response.data).draw(); // Add filtered data and redraw the table

                // Modal handling for viewing/editing transactions
                $(document).on('click', 'td[data-transaction-id]', function () {
                    var transactionId = $(this).data('transaction-id');
                    fetchTransactionDetails(transactionId);
                    $('#editEventModal').modal('show');
                });
            },
            error: function (xhr, status, error) {
                console.error("Error: " + error);
            }
        });
    }
</script>
