
<!DOCTYPE html>
<html lang="en">
<head>


    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.6/css/dataTables.dataTables.css" />
    <link rel="stylesheet" href="~/css/site.css">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/2.1.6/js/dataTables.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title>@ViewData["Title"]</title>
    <style>
        tbody, td, tfoot, th, thead, tr {
            border-color: inherit !important;
            border-width: 0 !important;
        }

        .save-button2 {
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #F3BC12;
            color: #23282B;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .modal .form-container {
            display: flex;
            justify-content: space-between;
            width: 100%;
            background-color: #e0e0e0;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .modal .form-left,
        .modal .form-right {
            display: flex;
            flex-direction: column;
            width: 48%;
        }

            .modal .form-left input,
            .modal .form-left select,
            .modal .form-right input {
                margin-bottom: 10px;
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

        .modal .map-container {
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 10px;
            height: 400px; /* Adjust height as needed */
            margin-top: 20px; /* Ensure space between form and map */
        }



        .modal .save-button {
            align-self: flex-end;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #F3BC12;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

    </style>

</head>
<body>
    <div class="container">
        <h1 class="Title">Admins Table</h1>
        <p class="text-right">
            <a class="btn btn-primary" id="AddUserButton" onclick="location.href='@Url.Action("AddAdmin", "Admin")'">Create New Admin</a>
        </p>
        <p class="text-right">
            <a onclick="location.href='@Url.Action("DownloadExcel", "Admin")'" class="btn btn-primary">
                <i class="fas fa-share-square"></i> Export As Excel
            </a>
        </p>
        <div class="text-end mb-3">
            <button id="toggleFiltersButton" class="btn btn-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#filterSection" aria-expanded="false" aria-controls="filterSection">
                Show Filters
            </button>
        </div>

        <!-- Filters Section -->
        <div id="filterSection" class="collapse">
            <div class="row mb-3">
                <div class="col-md-3">
                    <label for="TypeFilter" class="form-label">Employee Type:</label>
                    <select id="TypeFilter" class="form-select">
                        <option value="">Select Type</option>
                        <option value="FullTime">Full Time</option>
                        <option value="PartTime">Part Time</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="TitleFilter" class="form-label">Title:</label>
                    <select id="TitleFilter" class="form-select">
                        <option value="">Select Title</option>
                        <option value="Runner">Runner</option>
                        <option value="Supervisor">Supervisor</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="ActiveFilter" class="form-label">Active Status:</label>
                    <select id="ActiveFilter" class="form-select">
                        <option value="">Select Status</option>
                        <option value="true">Active</option>
                        <option value="false">Inactive</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button id="FilterButton" class="btn btn-primary w-100">Apply Filters</button>
                </div>
            </div>
        </div>




        <table id="Admin-table" class="table table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th></th>
                    <th>ID</th>
                    <th>NAME</th>
                    <th>EMAIL</th>
                    <th>ACCESS</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>



    <div class="modal fade" id="editEventModal" tabindex="-1" aria-labelledby="editEventModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="editEventModalLabel">Admin Info</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="closeEditModal" onclick="$('#editEventModal').modal('hide');"></button>

                </div>
                <div class="modal-body">
                    <div class="form-container">
                        <div class="form-left">
                            <label for="Admin_ID">Admin_ID</label>
                            <input type="number" id="Admin_ID" name="Admin_ID" readonly />
                            <label for="Admin_Name">Admin Name</label>
                            <input type="text" name="Admin_Name" placeholder="Admin_Name" readonly />
                            <label for="PhoneNumber">Phone Number</label>
                            <input type="text" name="PhoneNumber" placeholder="Phone" readonly />
                            <label for="Address">Address</label>
                            <input type="text" name="Address" placeholder="Address" readonly />
                        </div>
                        <div class="form-right">
                            <label for="Email">Email</label>
                            <input type="text" name="Email" placeholder="Email" readonly />
                            <label for="Access">Access</label>
                            <input type="text" name="Access" placeholder="Access" readonly />
                            <label for="AdditionalNotes">Additional Notes</label>
                            <input type="text" name="AdditionalNotes" placeholder="Additional Notes" readonly />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<script>
    //Fill table
    $(document).ready(function () {
        $.ajax({
            url: '/Admin/Admins',
            type: 'GET',
            success: function (response) {
                if (response.success) {

                    var tableBody = $('#Admin-table tbody');
                    tableBody.empty();

                    $.each(response.modell, function (index, item) {

                        var row = `
                                       <tr>
                                          <td data-employee-id="${item.admin_ID}"><img src="../Images/UserIcon.png" style="width: 35px; height: 35px; background-color: transparent; display: block;" alt="Icon" /></td>
                                          <td>${item.admin_ID}</td>
                                          <td>${item.admin_Name}</td>
                                          <td>${item.email}</td>
                                          <td>${item.access}</td>
                                        <td>
                                                      <a class="btn btn-primary" onclick="fetchAdminDetails(${item.admin_ID});" style="background-color: #23282B; border-color:#23282B; color:#F3BC12">
                                                            <i class="bi bi-info-circle" style="font-size: 15px;font-weight: bold"></i>
                                                </a>
                                                <a  class="btn btn-primary" style="background-color: #F3BC12; border-color:#F3BC12; color:#23282B">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                    <button class="btn btn-danger" onclick="deleteAdmin(this, ${item.admin_ID})"  style="background-color: #23282B; border-color:#23282B; color:#F3BC12">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>`;
                        tableBody.append(row);
                    });
                    $('#Admin-table').DataTable();
                } else {
                    alert("Failed to fetch Admin data.");
                }
            },
            error: function (xhr, status, error) {
                console.error("Error: " + error);
            }
        });
    });

    function deleteAdmin(btn, uid) {
        if (confirm('Are you sure you want to delete this admin?')) {
            $.ajax({
                url: '/Admin/Remove', 
                type: 'POST',
                data: { id: uid },
                success: function (result) {
                    if (result.success) {
                        // Optionally reload the page to reflect the changes
                        $(btn).closest('tr').remove();

                    } else {
                        alert('Error deleting admin');
                    }
                },
                error: function (err) {
                    // Handle error
                    console.error(err);
                    alert('Error deleting admin');
                }
            });
        }
    }

    function fetchAdminDetails(adminId) {
        $.ajax({
            url: '/Admin/GetAdminDetails',
            type: 'GET',
            data: { id: adminId },
            success: function (result) {
                if (result.success) {
                    console.log(result);
                    populateModal(result.data);
                    $('#editEventModal').modal('show');
                } else {
                    alert('Error fetching user details');
                }
            },
            error: function (err) {
                console.error(err);
                alert('Error fetching user details');
            }
        });
    }
    function populateModal(user) {
        $('#Admin_ID').val(user.admin_ID);
        $('input[name="Admin_Name"]').val(user.admin_Name);
        $('input[name="PhoneNumber"]').val(user.phoneNumber);
        $('input[name="Address"]').val(user.address);
        $('input[name="Email"]').val(user.email);
        $('input[name="Access"]').val(user.access);
        $('input[name="AdditionalNotes"]').val(user.notes);
      

    }
</script>
</html>